<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity"
    android:background="@color/dark_green"
    android:layout_marginTop="65dp">

    <!-- Top Block Layout -->
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:backgroundTint="@color/dark_green"
        android:id="@+id/toolbar"
        android:background="?android:attr/windowBackground"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SETTINGS"
                android:fontFamily="@font/nunito"
                android:paddingTop="16dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>

    <!-- LinearLayout containing Settings Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <!-- Join Group Button -->
        <Button
            android:id="@+id/join_group_btn"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/sage"
            android:text="Join Group"
            android:fontFamily="@font/ptsans"
            android:textSize="14sp"
            android:textColor="@color/white" />

        <!-- One-Time Code Input -->
        <EditText
            android:id="@+id/one_time_code_input"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:hint="Enter One-Time Code"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

        <!-- Generate One-Time Code Button  -->
        <Button
            android:id="@+id/generate_one_time_code_btn"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/sage"
            android:text="Generate One-Time Code"
            android:fontFamily="@font/ptsans"
            android:textSize="14sp"
            android:textColor="@color/white" />

        <!-- One-Time Code Display -->
        <TextView
            android:id="@+id/one_time_code_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

        <!-- Edit Profile Button  -->
        <Button
            android:id="@+id/edit_profile_btn"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/sage"
            android:text="Edit Profile"
            android:fontFamily="@font/ptsans"
            android:textSize="14sp"
            android:textColor="@color/white" />

        <!-- Manage Family Button  -->
        <Button
            android:id="@+id/manage_family_btn"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            android:backgroundTint="@color/sage"
            android:text="Manage Family"
            android:fontFamily="@font/ptsans"
            android:textColor="@color/white" />

        <!-- Leave Family Button  -->
        <Button
            android:id="@+id/leave_family_btn"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            android:backgroundTint="@color/sage"
            android:text="Leave Family"
            android:fontFamily="@font/ptsans"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>