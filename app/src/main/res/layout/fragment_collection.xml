<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark_green"
    android:layout_marginTop="65dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/yellow"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <TextView
            android:id="@+id/view_collection_tutorial_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is where you can view collections! Press here to learn more."
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito"
            android:drawableRight="@drawable/ic_drop_down"
            android:drawableTint="@color/black"/>

        <TextView
            android:id="@+id/view_collection_tutorial_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_collection_tutorial_title"
            android:layout_marginTop="8dp"
            android:text="Firstly, select a collection to view. Then, you can sort the collection by user or tag. Press the buttons below to sort the collection."
            android:textSize="12sp"
            android:textColor="@color/black"
            android:fontFamily="@font/ptsans"
            android:visibility="gone"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/sort_by_user_btn"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:text="SORT BY USER"
            android:backgroundTint="@color/blue"
            android:drawableLeft="@drawable/ic_role"/>

        <Button
            android:id="@+id/sort_by_tag_btn"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:text="SORT BY TAG"
            android:backgroundTint="@color/blue"
            android:drawableLeft="@drawable/ic_hashtag"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/collection_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"/>

</LinearLayout>